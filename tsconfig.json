{
	"compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": ["vitest/globals"]
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", "dist"]
}
